<%= form_for @user, controller: "users", action: "create" do |f| %>
<div class="field" >
<%= f.label :name %>
<%= f.text_field "name" %>
</div>
<div class="field" >
<%= f.label :password %>
<%= f.text_field :password %>
</div>
<div class="field" >
<%= f.label :password_confirmation %>
<%= f.text_field :password_confirmation %>
</div>
<%= f.submit value: "register" %>

<% end %>
